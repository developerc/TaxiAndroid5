<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taxiandroid.ru.taxiandr.ActivitySeven">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_blue_color"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gobackwards"
                android:id="@+id/btnBack"
                android:textSize="20dp"
                android:background="@drawable/my_btn_start"
                style="@style/ButtonText"
                android:paddingBottom="@dimen/activity_vertical_margin"
                >
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_activity_seven"
                android:id="@+id/btnPostHTTP"
                android:textSize="20dp"
                android:background="@drawable/my_btn_start"
                style="@style/ButtonText"
                android:paddingBottom="@dimen/activity_vertical_margin"
                >
            </Button>
        </LinearLayout>

        <WebView
            android:id="@+id/webkit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="horizontal|vertical" />

    </LinearLayout>

</RelativeLayout>
